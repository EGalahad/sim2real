<mujoco model="g1_27dof scene">
  <include file="g1_27dof_nohand.xml" />
  <include file="../../objects/door_no_handle-stair.xml" />

  <statistic center="0 0 0.5" extent="2.0" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="-130" elevation="-20" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
      height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
      rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
      reflectance="0.2" />
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />
    <!-- Site -->
    <site name="com_marker" pos="0.1 0 0" size="0.05" rgba="1 0 0 1" type="sphere" />
  </worldbody>

  <sensor>
    <framepos name="wall_left_pos" objtype="site" objname="wall_left_site" />
    <framequat name="wall_left_quat" objtype="site" objname="wall_left_site" />
    <framepos name="wall_right_pos" objtype="site" objname="wall_right_site" />
    <framequat name="wall_right_quat" objtype="site" objname="wall_right_site" />
    <framepos name="handle_pos" objtype="site" objname="handle_site" />
    <framequat name="handle_quat" objtype="site" objname="handle_site" />

    <framepos name="pelvis_pos" objtype="site" objname="pelvis_site" />
    <framequat name="pelvis_quat" objtype="site" objname="pelvis_site" />
  </sensor>

</mujoco>