<mujoco model="door_scene">
    <option gravity="0 0 -9.81" />
    <compiler angle="radian" />

    <worldbody>

        <body name="wall" pos="1.0 -0.2 0" quat="0 0 0 1">
            <geom name="wall_geom_right" type="box" size="0.05 0.5 1.025" pos="0 -1.0 1.025"
                rgba="0.6 0.6 0.6 1"
                contype="0" conaffinity="0"/>
            <geom name="wall_geom_left" type="box" size="0.05 0.5 1.025" pos="0 1.0 1.025"
                rgba="0.6 0.6 0.6 1"
                contype="0" conaffinity="0"/>
            <!-- <geom name="wall_geom_bottom" type="box" size="0.05 0.5 0.025" pos="0 0 0.025"
                rgba="0.6 0.6 0.6 1"
                contype="0" conaffinity="0"/> -->
            <site name="wall_left_site" pos="0 -0.5 0" size="0.05" rgba="1 0 0 1" type="sphere" />
            <site name="wall_right_site" pos="0 0.5 0" size="0.05" rgba="1 0 0 1" type="sphere" />

            <body name="door" pos="0 0 0">
                <joint name="door_joint" type="hinge" pos="0 0.5 0" axis="0 0 1" range="-1.57 0"
                    stiffness="2" damping="1" springref="0" />
                <geom name="door_geom" type="box" size="0.02 0.5 0.975" pos="0 0 1"
                    rgba="0.4 0.3 0.1 1.0"
                    contype="2" conaffinity="1" mass="20" />

                <body name="handle" pos="0.04 -0.4 0.8">
                    <site name="handle_site" pos="0 0.4 0" size="0.05" rgba="1 0 0 1"
                        type="sphere" />
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="door_motor" joint="door_joint" ctrllimited="true" ctrlrange="-100 100" />
    </actuator>
</mujoco>