<mujoco model="door_scene">
    <option gravity="0 0 -9.81" />
    <compiler angle="radian" />

    <worldbody>

        <body name="Wall" pos="1.0 0.0 0.0" quat="0 0 0 1">
            <geom name="wall_geom_right" type="box" size="0.05 0.5 1.025" pos="0 -1.1 1.025"
                rgba="0.6 0.6 0.6 1"
                contype="2" conaffinity="1"/>
            <geom name="wall_geom_left" type="box" size="0.05 0.5 1.025" pos="0 1.1 1.025"
                rgba="0.6 0.6 0.6 1"
                contype="2" conaffinity="1"/>
            <!-- <geom name="wall_geom_bottom" type="box" size="0.05 0.5 0.025" pos="0 0 0.025"
                rgba="0.6 0.6 0.6 1"
                contype="2" conaffinity="1" mass="10" /> -->

            <body name="Door" pos="0 0 0">
                <joint name="door_joint" type="hinge" pos="0 0.5 0" axis="0 0 1" range="-1.57 0"
                     springref="0" />
                <geom name="door_geom" type="box" size="0.02 0.5 0.975" pos="0 0 1"
                    rgba="0.4 0.3 0.1 1.0"
                    contype="2" conaffinity="1" mass="20.0" />
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="door_joint" joint="door_joint" ctrllimited="true" ctrlrange="-100 100" />
    </actuator>

    <sensor>
    <!-- door sensors -->
    <framepos name="Door_pos" objtype="xbody" objname="Door" />
    <framequat name="Door_quat" objtype="xbody" objname="Door" />
    <framelinvel name="Door_linvel" objtype="xbody" objname="Door" />
    <frameangvel name="Door_angvel" objtype="xbody" objname="Door" />

    <!-- wall sensors -->
    <framepos name="Wall_pos" objtype="xbody" objname="Wall" />
    <framequat name="Wall_quat" objtype="xbody" objname="Wall" />
    <framelinvel name="Wall_linvel" objtype="xbody" objname="Wall" />
    <frameangvel name="Wall_angvel" objtype="xbody" objname="Wall" />
    </sensor>

</mujoco>